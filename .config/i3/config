#kill focused window
bindsym $mod+x kill

#exe rofi
bindsym $mod+l exec rofi -show-icons -show drun
bindsym $mod+Shift+e exec kitty -e ranger

#define border size
default_border pixel 1
for_window [class=".*"] border pixel 0

#open Obs in workspace 10
for_window [class="obs"] move to workspace $ws10

for_window [class="Blender"] move to workspace $ws9

for_window [class="discord"] move to workspace $ws8

# class           border    backgr.   text    indicator child_border
client.focused    #00b0ff   #000000   #f5f5f5 #00b0ff   #00b0ff
client.unfocused  #ffffff   #ffffff   #000000 #ffffff   #ffffff

#define space between windows
gaps inner 4 
gaps outer 1

#change brightness
# sudo apt install light
# sudo chmod +s /usr/bin/light

bindsym XF86MonBrightnessUp exec light -A 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec light -U 5 # decrease screen brightness

# bindsym $mod+Return exec terminal
bindsym $mod+Return exec ~/.local/kitty.app/bin/kitty

#start polybar with theme
exec --no-startup-id ~/.config/polybar/grayblocks/launch.sh

#set wallpaper
exec --no-startup-id feh --bg-fill --randomize $HOME/Night_Wallpapers/

#start compton compositor to allow window transparency
exec --no-startup-id /usr/local/bin/picom --experimental-backends &

#start nvidia to load default settings
exec --no-startup-id nvidia-settings --load-config-only

#resize window
bindsym $mod+Ctrl+Left resize shrink width 5 px or 5 ppt
bindsym $mod+Ctrl+Down resize grow height 5 px or 5 ppt
bindsym $mod+Ctrl+Up resize shrink height 5 px or 5 ppt
bindsym $mod+Ctrl+Right resize grow width 5 px or 5 ppt

mode "launch" {
  bindsym v exec vivaldi
  bindsym c exec code
  bindsym o exec obs

  bindsym Escape mode "default"
  bindsym Enter mode "default"

}

#Auto exit from 'launch' mode
bindsym $mod+Shift+l mode "launch" ; exec sh -c 'sleep 2 && i3-msg mode "default"'

#screenshot
bindsym Print exec flameshot full -p $HOME/Imagens/

